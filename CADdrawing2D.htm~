    <tr><td rowspan="2"><img src="ruler-triangle-48.png" /></td><td class="menu">Load a JSON file: </td>         <td class="menu"><input type="file" id="loadDocument" value="Load" name="f3" class="f3"/></td>
    <td rowspan="4"><div id="drawing"></div></td>
